# QUERIES

type Query {
  user(input: GetUser): User!
  roadmap(input: GetRoadmap): Roadmap!
  users: [User!]!
  roadmaps(input: GetRoadmaps): [Roadmap!]!
  me: User @isAuthenticated
}

enum Sort {
  NEWEST
  OLDEST
  MOST_FOLLOWERS
  MOST_CHECKPOINTS
  LEAST_CHECKPOINTS
}

# INPUTS

input GetUser {
  id: Int!
}

input GetRoadmap {
  id: Int!
}

input GetRoadmaps {
  cursor: String!
  sort: Sort!
}
